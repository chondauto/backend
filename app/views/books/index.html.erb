<ul>
    <% @books.each do |book| %>
        <li><%= book.id %></li>
        <li><%= book.title %></li>
        <li><%= book.content %></li>
        <li><%= book.author %></li>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete %></td>
    <% end %>
</ul>
<%= link_to "New Book", new_book_path %> 